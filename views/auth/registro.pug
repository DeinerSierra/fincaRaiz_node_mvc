extends ../layout/index
block contenido
    div.py-10
        a(href="/") 
            h1.text-4xl.my-10-font-extrabold.text-center FincaRaiz
        h2.text-center.font-bold.text-2xl= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-500.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-gray-800.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.bg-gray-800.rounded
                        label.block.text-sm.uppercase.text-gray-200.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.bg-gray-400.w-full.px-3.py-2.border.border-gay-500.rounded-md.placeholder-gray-200(placeholder="Tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div.bg-gray-800.rounded
                        label.block.text-sm.uppercase.text-gray-200.mb-2.font-bold(for="email") Tu Email
                        input#email.bg-gray-400.w-full.px-3.py-2.border.border-gay-500.rounded-md.placeholder-gray-200(placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '')
                    div.bg-gray-800.rounded
                        label.block.text-sm.uppercase.text-gray-200.mb-2.font-bold(for="password") Tu Password
                        input#password.bg-gray-400.w-full.px-3.py-2.border.border-gay-500.rounded-md.placeholder-gray-200(placeholder="Tu password" type="password" name="password")
                    div.bg-gray-800.rounded
                        label.block.text-sm.uppercase.text-gray-200.mb-2.font-bold(for="r_password") Tu Repetir Password
                        input#r_password.bg-gray-400.w-full.px-3.py-2.border.border-gay-500.rounded-md.placeholder-gray-200(placeholder="Tu repite tu password" type="password" name="r_password")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvidaste mi password
                    input(class="w-full bg-gray-400 hover:bg-gray-600 font-bold py-3 cursor-pointer rounded" type="submit" value="Crear Cuenta")
