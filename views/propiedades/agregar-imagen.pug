extends ../layout/admin
block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)
block contenido
    div.py-10
        //h1.text-4xl.my-10-font-extrabold.text-center FincaRaiz
        h2.text-center.font-bold.text-2xl= pagina
        

        div(class="bg-gray-800 shadow-md py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="imagen" class="dropzone bg-gray-800 border-dashed border-white border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)
                input(type="hidden" name="_csrf" value= csrfToken)
                  
            button(id="publicar" class="mt-5 w-full bg-orange-600 hover:bg-orange-700 font-bold py-3 cursor-pointer rounded" type="button") Publicar Propiedad
block scripts
    script(src="/js/agregarImagen.js") 
    