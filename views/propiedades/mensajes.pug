extends ../layout/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")= pagina
    a(href="/mis-propiedades" class="rounded py-2 bg-orange-600 hover:bg-orange-700 text-sm px-10 font-bold text-center uppercase my-5 inline-block w-full sm:w-auto") Volver
    div(class="mx-auto max-w-4xl shadow")
        if mensajes.length
            ul
                each mensaje in mensajes
                    li(class="border-gray-200 border-b p-5")
                        p(class="font-bold text-gray-200") Nombre: 
                            span(class="font-normal")= mensaje.usuario.nombre
                        p(class="font-bold text-gray-200") Email: 
                            span(class="font-normal")= mensaje.usuario.email
                        p(class="font-bold text-gray-200") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje
                        p(class="font-bold text-gray-200") Enviado: 
                            span(class="font-normal")= formatearFecha(mensaje.createdAt)
        else
            p(class="text-center text-gray-400 p-5") No hay mensajes